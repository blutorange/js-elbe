{
  "name": "streams",
  "version": "1.0.0",
  "description": "Utility methods for working with iterables as streams.",
  "main": "dist/node/main.js",
  "types": "dist",
  "scripts": {
    "build": "npm run clean && npm run doc && npm run transpile && npm run web",

    "clean": "rm -rf dist/* doc/* && rm README.typedoc",
    "doc": "npm run doc-readme && npm run doc-create",
    "test": "echo \"Error: no test specified\" && exit 1",
    "web": "npm run web-babel && npm run web-babelfix && npm run web-browserify && npm run web-minify",
    
    "doc-readme": "sed 's/http:\\/\\/htmlpreview\\.github\\.io\\/?https:\\/\\/github.com\\/blutorange\\/js-streams\\/blob\\/master\\/doc/./g' README.md  > README.typedoc",
    "doc-create": "npx typedoc --mode modules --name js-streams --readme README.typedoc --out doc --excludeExternals --excludePrivate --excludeProtected ./*.ts",
    "transpile": "npx tsc -p tsconfig.json",
    
    "web-babel": "npx babel dist/node/*.js --out-dir dist/web/",
    "web-babelfix": "sed -ri 's/import \\\"(..*)\\\"/require(\"\\1\")/g' dist/web/*.js",
    "web-browserify": "npx browserify dist/web/main.js --standalone Streams -o dist/streams.js",
    "web-minify": "npx minify dist/streams.js --out-file dist/streams.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blutorange/js-iterables.git"
  },
  "keywords": [
    "iterable",
    "stream"
  ],
  "author": "Andre Wachsmuth",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/blutorange/js-iterables/issues"
  },
  "dependencies": {
    "comparators": "https://github.com/blutorange/js-comparators"
  },
  "homepage": "https://github.com/blutorange/js-iterables#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "babel-minify": "^0.3.0",
    "browserify": "^15.2.0",
    "core-js": "^2.5.3",
    "regenerator-runtime": "^0.11.1",
    "tslib": "^1.9.0",
    "typedoc": "^0.10.0",
    "typescript": "^2.8.0-dev.20180202"
  }
}
